<UserControl x:Class="monitor.Views.HomeView.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:monitor.Views.HomeView"  
             xmlns:gif="http://wpfanimatedgif.codeplex.com" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid x:Name="grdCargando"  Grid.ColumnSpan="3" Grid.RowSpan="3" Background="LightGray" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label Content="Cargando" FontSize="50"    VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Image gif:ImageBehavior.AnimatedSource ="/monitor;component/Assets/loading.gif" Width="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
