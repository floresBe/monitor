<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:monitor.Views.UsuariosView"
      x:Class="monitor.Views.UsuariosView.IndexUser"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IndexUser">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGridUsuario" AutoGenerateColumns="False" CanUserSortColumns="True" CanUserAddRows="False" CanUserReorderColumns="False" CanUserDeleteRows="False" CanUserResizeColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Header="No. Empleado" Binding="{Binding NumeroEmpleado}"/>
                <DataGridTextColumn IsReadOnly="True" Header="Tipo" Binding="{Binding TipoEmpleado}"/>
                <DataGridCheckBoxColumn IsReadOnly="True" Header="Activo" Binding="{Binding Activo}"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--<Button Grid.Row="1"/>-->
    </Grid>
</Page>
