<Window x:Class="monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Monitor" Height="450" Width="800" WindowState="Maximized">
    <Window.Content>
        <Grid Background="#e8f4fd">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".25*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height=".1*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Rectangle Fill="#2196f3" Grid.ColumnSpan="2"></Rectangle>
            <Rectangle Fill="#2196f3" Grid.Row="1"></Rectangle>
            <Grid Grid.Row="1" Grid.Column="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Name="lblPageTitle" FontSize="25"></Label>

                <Frame Grid.Row="1" x:Name="mainPage" NavigationUIVisibility="Hidden">

                </Frame>

            </Grid>
        </Grid>

    </Window.Content>
</Window>
